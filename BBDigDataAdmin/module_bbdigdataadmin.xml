<?xml version="1.0" encoding="UTF-8"?>
<project name="module_bbdigdataadmin" default="compile.module.bbdigdataadmin">
  <dirname property="module.bbdigdataadmin.basedir" file="${ant.file.module_bbdigdataadmin}"/>
  
  <property name="module.jdk.home.bbdigdataadmin" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bbdigdataadmin" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bbdigdataadmin" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bbdigdataadmin" value="${compiler.args}"/>
  
  <property name="bbdigdataadmin.output.dir" value="${module.bbdigdataadmin.basedir}/out/production/BBDigDataAdmin"/>
  <property name="bbdigdataadmin.testoutput.dir" value="${module.bbdigdataadmin.basedir}/out/test/BBDigDataAdmin"/>
  
  <path id="bbdigdataadmin.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bbdigdataadmin.module.production.classpath">
    <path refid="${module.jdk.classpath.bbdigdataadmin}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="bbdigdataadmin.runtime.production.module.classpath">
    <pathelement location="${bbdigdataadmin.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="bbdigdataadmin.module.classpath">
    <path refid="${module.jdk.classpath.bbdigdataadmin}"/>
    <pathelement location="${bbdigdataadmin.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  <path id="bbdigdataadmin.runtime.module.classpath">
    <pathelement location="${bbdigdataadmin.testoutput.dir}"/>
    <pathelement location="${bbdigdataadmin.output.dir}"/>
    <pathelement location="${idea.home}/lib/annotations.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.bbdigdataadmin">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bbdigdataadmin">
    <patternset refid="excluded.from.module.bbdigdataadmin"/>
  </patternset>
  
  <path id="bbdigdataadmin.module.sourcepath">
    <dirset dir="${module.bbdigdataadmin.basedir}">
      <include name="src"/>
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bbdigdataadmin" depends="compile.module.bbdigdataadmin.production,compile.module.bbdigdataadmin.tests" description="Compile module BBDigDataAdmin"/>
  
  <target name="compile.module.bbdigdataadmin.production" depends="register.custom.compilers" description="Compile module BBDigDataAdmin; production classes">
    <mkdir dir="${bbdigdataadmin.output.dir}"/>
    <javac2 destdir="${bbdigdataadmin.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bbdigdataadmin}/javac">
      <compilerarg line="${compiler.args.bbdigdataadmin}"/>
      <bootclasspath refid="bbdigdataadmin.module.bootclasspath"/>
      <classpath refid="bbdigdataadmin.module.production.classpath"/>
      <src refid="bbdigdataadmin.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bbdigdataadmin"/>
    </javac2>
    
    <copy todir="${bbdigdataadmin.output.dir}">
      <fileset dir="${module.bbdigdataadmin.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.bbdigdataadmin.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bbdigdataadmin.tests" depends="register.custom.compilers,compile.module.bbdigdataadmin.production" description="compile module BBDigDataAdmin; test classes" unless="skip.tests"/>
  
  <target name="clean.module.bbdigdataadmin" description="cleanup module">
    <delete dir="${bbdigdataadmin.output.dir}"/>
    <delete dir="${bbdigdataadmin.testoutput.dir}"/>
  </target>
</project>